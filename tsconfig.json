{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "build",
    "outDir": "build",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["jest", "node", "testing-library__jest-dom"],
    "resolveJsonModule": true,
    "plugins": [{"name": "typescript-plugin-css-modules"}]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "src/**/*.mdx",
    "src/**/*.stories.tsx",
    "src/**/*.storiesTypes.ts",
    "src/**/*.test.tsx",
    "src/**/*.test.ts",
    "src/**/mocks/*",
    "src/utils/tests/*"
  ]
}
