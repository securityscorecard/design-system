{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "build",
    "outDir": "build",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["jest", "node"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "jest.setup.ts"],
  "exclude": [
    "node_modules",
    "build",
    "src/**/*.mdx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.stories.tsx",
    "src/**/_*",
    "jest.setup.ts",
  ]
}
