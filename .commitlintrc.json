{
  "extends": [
    "@commitlint/config-conventional"
  ],
  "rules": {
    "header-max-length": [2, "always", 69],
    "body-max-line-length": [0],
    "footer-max-line-length": [0],
    "scope-case": [
      2,
      "always",
      [
        "pascal-case",
        "camel-case",
        "kebab-case"
      ]
    ]
  }
}